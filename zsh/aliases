# ls with colors
alias ls='ls -G'
# git
alias gl='git pull'
alias gp='git push'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gb='git branch'
alias gs='git status'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'

#vim
alias v='/Applications/MacVim.app/Contents/MacOS/Vim'


#rails
alias rdb='rake db:migrate && rake db:migrate:redo && rake db:test:prepare'
alias b='bundle exec'

alias tagit='/usr/local/Cellar/ctags/5.8/bin/ctags -R --exclude=.git --exclude=log *'

#tmux
alias tls='tmux ls'
alias tn='tmux new -s'
alias ta='tmux attach -t'



#git
function g {
  if [[ $# > 0 ]]; then
    git $@
  else
    git st
  fi
}
compdef g=git
alias grp="bundle exec rake && git push"
alias gci="git pull --rebase && brake && git push"
alias gcl="git clone"
alias gd="git diff"
alias gg="git grep"
alias amend="git commit --amend"

alias ga="git add"
alias gai="git add --interactive"

alias gb="git checkout -b"
alias gc="git checkout"
alias gs="git st" # Use my alias from ~/.gitconfig
alias gcm="git commit -m"


